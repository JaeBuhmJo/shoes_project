<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.AttachmentMapper">

	<select id="getAttachments" resultType="com.project.domain.AttachmentDTO">
		select * from attachments where product_id = #{productId} order by file_name
	</select>
	
	<insert id="insertAttachments">
		insert into attachments values(#{uuid}, #{productId}, #{uploadPath}, #{fileName})
	</insert>

	<delete id="deleteAttachments">
		delete from attachments where product_id = #{product_id}
	</delete>
</mapper>