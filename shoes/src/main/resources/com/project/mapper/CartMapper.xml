<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.CartMapper">
		
      <!-- 장바구니 추가 -->
	  <insert id="addCart">
		insert into carts(memberId, productId, cartAmount, inventoryId)
		values(#{memberId}, #{productId}, #{cartAmount}, #{inventoryId}) 
	  </insert>
	  
	  <!-- 장바구니 삭제 -->
	  <delete id="deleteCart">
		delete from carts where cartId = #{cartId} and memberId = #{memberId};
	  </delete>
	   
	   <!-- 장바구니 수량 수정 -->
	  <update id="modifyamount">
 		update 
	  		carts 
		set 
			cartAmount = #{cartAmount} 
		where 
			cartId = #{cartId}
	  </update>
	
	 
